{
  "compilerOptions": {
    // Completeness
    "skipLibCheck": true,
    // Emit
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "",
    // Language and Environment
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    // Modules
    "allowImportingTsExtensions": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "types": ["bun"],
    // Projects
    "disableReferencedProjectLoad": true
  }
}
